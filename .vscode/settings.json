{
  "workbench.colorTheme": "Dracula Refined",
  "workbench.colorCustomizations": {
      "editorLineNumber.activeForeground": "#e4d613",
      "editor.selectionBackground": "#00b7ff86",
      "editor.selectionForeground": "#ffffff",
      "panel.border": "#ffffff",
      "editorBracketHighlight.foreground1": "#e4d613",
      "editorBracketHighlight.foreground2": "#13d6e4",
      "editorBracketHighlight.foreground3": "#f08307",
      "editorBracketHighlight.foreground4": "#53d806",
      "editorBracketHighlight.foreground5": "#13d6e4",
      "editorBracketHighlight.foreground6": "#e4d613",
      "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000",
  },

  "editor.tokenColorCustomizations": {
    "comments": "#08e600"
  },

  //Autofix on save
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll": true
  },
  "eslint.validate": ["javascript", "typescript"],

  //Enable brackets {} colorization
  "editor.bracketPairColorization.enabled": true,
  "explorer.confirmDelete": false,

  "code-runner.clearPreviousOutput": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.tabSize": 2,
}
